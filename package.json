{
  "name": "sheduled-reports-app",
  "version": "1.0.0",
  "description": "Grafana app plugin for scheduled dashboard reporting",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "e2e:setup": "docker compose -f docker-compose.e2e.yml up -d && npm run e2e:wait",
    "e2e:teardown": "docker compose -f docker-compose.e2e.yml down",
    "e2e:wait": "npx wait-on http://localhost:3000/api/health -t 120000",
    "sign": "npx --yes @grafana/sign-plugin@latest",
    "watch": "webpack --mode development --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sheduled-reports-app"
  },
  "author": "Your Organization",
  "license": "Apache-2.0",
  "devDependencies": {
    "@grafana/data": "^12.2.0",
    "@grafana/plugin-e2e": "^2.1.14",
    "@grafana/runtime": "^12.2.0",
    "@grafana/ui": "^12.2.0",
    "@playwright/test": "^1.55.1",
    "@swc/core": "^1.3.0",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-router-dom": "^5.3.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.0",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "jest": "^29.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.0",
    "swc-loader": "^0.2.3",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "wait-on": "^9.0.1",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-livereload-plugin": "^3.0.2"
  },
  "dependencies": {
    "cronstrue": "^2.28.0",
    "react-hook-form": "^7.45.0",
    "zod": "^3.21.0"
  },
  "engines": {
    "node": ">=18"
  }
}
