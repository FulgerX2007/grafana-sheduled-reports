{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "app",
  "name": "Scheduled Reports",
  "id": "sheduled-reports-app",
  "info": {
    "description": "Schedule and email dashboard reports as PDF or HTML",
    "author": {
      "name": "Andrian Iliev",
      "url": "https://github.com/FulgerX2007/"
    },
    "keywords": ["reporting", "pdf", "email", "scheduler"],
    "version": "1.0.0",
    "updated": "%TODAY%",
    "logos": {
      "small": "img/logo.png",
      "large": "img/logo.png"
    },
    "screenshots": [],
    "links": [
      {
        "name": "Documentation",
        "url": "https://github.com/FulgerX2007/grafana-sheduled-reports"
      }
    ]
  },
  "includes": [
    {
      "type": "page",
      "name": "Schedules",
      "path": "/a/sheduled-reports-app",
      "role": "Editor",
      "addToNav": true,
      "defaultNav": true
    },
    {
      "type": "page",
      "name": "Settings",
      "path": "/a/sheduled-reports-app/settings",
      "role": "Admin",
      "addToNav": true
    }
  ],
  "dependencies": {
    "grafanaDependency": ">=10.0.0",
    "plugins": [
      {
        "type": "renderer",
        "id": "grafana-image-renderer",
        "name": "Image Renderer",
        "version": ">=3.0.0"
      }
    ]
  },
  "backend": true,
  "executable": "gpx_reporting",
  "routes": [
    {
      "path": "api/*",
      "method": "*",
      "reqRole": "Editor"
    }
  ],
  "iam": {
    "permissions": [
      {
        "action": "datasources:query",
        "scope": "datasources:*"
      },
      {
        "action": "dashboards:read",
        "scope": "dashboards:*"
      },
      {
        "action": "folders:read",
        "scope": "folders:*"
      },
      {
        "action": "annotations:read",
        "scope": "annotations:*"
      }
    ]
  }
}
