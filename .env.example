# Grafana Configuration
GF_GRAFANA_URL=http://localhost:3000
GF_PLUGIN_SA_TOKEN=your-service-account-token-here

# Plugin Data Path
GF_PLUGIN_APP_DATA_PATH=./data

# SMTP Configuration (if not using Grafana's SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@example.com
SMTP_USE_TLS=true

# Renderer Configuration
RENDERER_URL=http://renderer:8081/render
RENDERER_TIMEOUT_MS=60000
RENDERER_DELAY_MS=1000
